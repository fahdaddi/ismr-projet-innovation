<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">

    <title>Smart Monitoring</title>
    <link rel="icon" href="favicon.ico" type="img/logo.png"/>
    <link rel="stylesheet" href="../css/bootstrap.css">
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark ">
      <img src="img/logo.png" alt="" style="height:45px; width:45px">
      <a class="navbar-brand" href="#">{{user.username}}</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav float-left">
          <li class="nav-item active">
            <a class="nav-link" href="/">Dashboard <span class="sr-only">(current)</span></a>
          </li>
        </ul>
        <ul class="nav navbar-nav float-right">
          {{#if user}}
          <li class="nav-item">
            <a class="nav-link" href="/logout">Se d√©connecter<span class="sr-only">(current)</span></a>
          </li>
          {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Se connecter<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">S'inscrire<span class="sr-only">(current)</span></a>
          </li>
        </ul>
        {{/if}}
      </div>
    </nav>
    <div class="container">
      {{#if success_msg}}
        <div class="alert alert-light">
          {{success_msg}}
        </div>
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-danger">
          {{error_msg}}
        </div>
      {{/if}}
      {{#if error}}
        <div class="alert alert-warning">
          {{error}}
        </div>
      {{/if}}
      {{#if errors}}
        {{#each errors}}
          <div class="alert alert-danger">
            {{msg}}
            {{/each}}
          </div>
      {{/if}}
      <div class="container">
        {{{body}}}
      </div>
    </div>
  </body>
</html>
